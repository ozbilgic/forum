<!-- syntax_highlighting: html -->
<div style="margin-bottom: 10px" class="topic columns">
  <div class="small-10 columns">
    <h5><%= link_to topic.title, topic %></h5>
    <p><%= truncate topic.body, length: 150 %></p>
    
    <div class="details">
      <% unless params[:action] == 'show' && params[:controller] == 'forums' %>
        <span class="forum-name">
          <%= link_to topic.forum.name, topic.forum %>
        </span>
      <% end %>
      <%= link_to_unless_current topic.user.username, profile_path(topic.user) %> tarafından
      <%= time_ago_in_words topic.created_at %> önce gönderildi.
    </div>
  </div>
  
  <div class="small-2 columns text-center answer-count">
    <strong><%= topic.comments.count %></strong><br> Yanıt
  </div>
</div><hr>

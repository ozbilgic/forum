<% content_for(:content) do %>
<div style="padding-top: 15px" class="row">
    <div class="large-2 columns">
      <%= image_tag @user.avatar_url, class: 'profile-image' %>
    </div>

    <div class="large-10 columns">
      <h2><%= "#{@user.first_name} #{@user.last_name}" %></h2>
      <p><%= @user.email %></p>
      <div class="button-bar">
        <ul class="button-group radius">
          <li><%= link_to 'Konular', profile_path(@user, sayfa: 'konular'),
                          class: 'small button secondary' %></li>
          <li><%= link_to 'Yorumlar', profile_path(@user, sayfa: 'yorumlar'),
                          class: 'small button secondary' %></li>
          <% if current_user == @user %>
            <li><%= link_to 'Profilimi Düzenle', edit_profile_path(@user),
                            class: 'small button secondary' %></li>
            <li><%= link_to 'Hesabımı Sil', @user,
                            class: 'small button alert',
                            method: :delete,
                            data: {confirm: 'Hesabınızı silmek istediğinize
                            emin misiniz?'} %></li>
          <% end %>
        </ul>
      </div>
    </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <hr>
    <%= yield(:profile_content) %>
  </div>
</div>
<% end %>
<%= render template: 'layouts/application' %>


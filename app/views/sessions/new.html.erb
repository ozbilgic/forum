<h1 class="text-center">Oturum Aç</h1>
<div class="large-4 columns large-centered panel radius">
  <%= form_for :session, url: session_path do |f| %>
      <%= f.text_field :user_name, placeholder: 'Kullanıcı Adı' %><br>
      <%= f.password_field :password, placeholder: 'Parola' %>
      <%= f.submit 'Oturum Aç', class: 'button large-12 columns' %>
  <% end %>
</div>